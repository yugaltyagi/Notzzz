<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    tools:context=".CreateNote">

    <!-- Modern Material Toolbar with accent color -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarofCreatenote"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="6dp"
        app:titleTextColor="@color/indigo"
        app:navigationIconTint="@color/indigo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/titleofnote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="12dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/charcoal_gray"
            android:hint="Note title"
            android:textColorHint="@color/slate_gray"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences"
            android:maxLines="1" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Content area with subtle border and soft background -->
    <EditText
        android:id="@+id/createcontentofnote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/note_content_background"
        android:gravity="top|start"
        android:hint="Start writing your thoughts..."
        android:textColorHint="@color/slate_gray"
        android:textColor="@color/charcoal_gray"
        android:textSize="20sp"
        android:lineSpacingExtra="4sp"
        android:padding="20dp"
        android:minHeight="200dp"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        app:layout_constraintTop_toBottomOf="@id/toolbarofCreatenote"
        app:layout_constraintBottom_toTopOf="@id/savenote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating Action Button with vibrant accent color -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/savenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Save note"
        app:backgroundTint="@color/sea_green"
        app:rippleColor="@color/forest_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/save_svg"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:fabSize="normal" />

    <!-- Circular progress indicator with complementary colors -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progreebarofcreatenote"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:indicatorColor="@color/teal"
        app:trackColor="@color/light_cyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtle shadow under toolbar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_shadow"
        app:layout_constraintTop_toBottomOf="@id/toolbarofCreatenote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>